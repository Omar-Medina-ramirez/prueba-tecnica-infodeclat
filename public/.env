# VentasPlus BI - Environment Configuration

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ventasplus_bi
DB_USER=ventasplus_user
DB_PASS=ventasplus_pass

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_TIMEZONE=America/Bogota

# Cache Configuration
CACHE_DRIVER=file
CACHE_TTL=3600

# Email Configuration (for notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@ventasplus.com
MAIL_FROM_NAME="VentasPlus BI"

# Security
JWT_SECRET=your_jwt_secret_key_here
API_RATE_LIMIT=100

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=csv,xlsx

# Logging
LOG_LEVEL=INFO
LOG_MAX_FILES=30

